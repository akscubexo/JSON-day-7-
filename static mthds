//storing structured data that can be assembled, parsed and generated by JavaScript 
//transferring data from a backend server to the frontend of an application 
//Data in JSON are stored in curly braces `{}`, as key and value pairs
//JSON can take up any valid JavaScript data type as a value pair, these include;

1. String

2. Number

3. Boolean (true or false)

4. Null

5. Array

6. Object

7. Infinity

8. NaN
  
{"firstName: "Akshara", "LastName: "Sharma"}

// two static methods available in JSON 
let person = { 
 "firstName":"John", 
 "LastName":"Plum",
 "occupation": "web Developer",
 "Hobbies": ["Reading", "Coding", "Basket Ball", "Football", "Movies", "Music"],
 "married" : true,
 "Age" : 29
}
console.log(person); 
const newPerson = JSON.stringify(person)
console.log(newPerson)
  console.log(typeof newPerson) // converted to string
  const newPerson2= JSON.parse(newPerson)
    console.log(newPerson2)
  console.log(typeof newPerson2) 
 //converted to object
